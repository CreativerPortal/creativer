    <link rel="stylesheet" href="/vendor/datetimeRangePicker/range-picker.css" />
    <link rel="stylesheet" href="/vendor/bootstrap-daterangepicker/daterangepicker-bs3.css" />

    <div class="row slid_create_event ">

        <div class="col-sm-10 padding-left_0">

            {#<div class="row margin-top_20">#}
                {#<div class="col-sm-2">Раздел:</div>#}
                {#<div class="col-sm-10">#}

                    {#<select name="section" class="selectForumId" ng-model="section" ng-pattern="/^[1-9]+/" required>#}
                        {#<optgroup ng-repeat="children in baraholka" label="[[ children.name ]]">#}
                            {#<option ng-repeat="child in children.children" value="[[ child.id ]]">[[ child.name ]]</option>#}
                        {#</optgroup>#}
                    {#</select>#}
                    {#<br/>#}
                    {#<span class="text-danger" ng-show="submitted && baraholka_form.section.$error.required">Раздел не выбран</span>#}
                {#</div>#}
            {#</div>#}

            <div class="row margin-top_20">
                <div class="col-sm-2">Заголовок:</div>
                <div class="col-sm-10">
                    <input type="text" name="tit" ng-model="name_title" ng-required="true" required="">
                    <span class="text-danger" ng-show="submitted && baraholka_form.tit.$error.required">Заголовок не должен быть пустым</span>
                </div>
            </div>

            <div class="row margin-top_20">
                <div class="col-sm-2">Разделы:</div>
                <div class="col-sm-10">
                    <select name="section" class="selectForumId" ng-model="selectSection" ng-pattern="/^[1-9]+/" required>
                        <optgroup ng-repeat="children in section" label="[[ children.name ]]">
                            <option ng-repeat="child in children.children" value="[[ child.id ]]" ng-selected="selectSection == child.id">[[ child.name ]]</option>
                        </optgroup>
                    </select>
                    <br/>
                    <span class="text-danger" ng-show="submitted && section.$error.required">Раздел не выбран</span>
                </div>
            </div>

            <div class="row margin-top_20">
                <div class="col-sm-2">Место проведения:</div>
                <div class="col-sm-10">
                    <select name="city" class="selectForumId" ng-model="selectCity">
                        <option value="[[ p_city.id ]]" ng-repeat="p_city in cities" ng-selected="selectCity == p_city.id">[[ p_city.name ]]</option>
                    </select>
                </div>
            </div>

            <div class="margin-top_10">
                <label class="" for="uploadImg" style="font-weight: normal;" ng-disabled="uploader.isUploading">
                    <div ng-disabled="uploader.isUploading" class="button_favorites early-message text-center pointer left" style="width: 118px; position: absolute;">
                        <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" style="height: 28px; width: 100%; position: relative; border-radius: 5px;" ng-style="{ 'width': uploader.progress + '%' }"></div>
                        <div class="middle" style="height: 28px; width: 100%; position: absolute; border: 10px; line-height: 26px;">Выбрать</div>
                    </div>
                </label>
                <div class="col-sm-offset-2 line">главное изображение события</div>
            </div>
            <div class="row margin-left_0 margin-top_5">
                {#<div class="upload__element" ng-repeat="item in uploader.queue" style="float: left;">
                    <span class="glyphicon glyphicon-remove close_image ng-isolate-scope" ng-click="item.remove();"></span>
                    <div ng-show="uploader.isHTML5" ng-thumb="{ file: item._file, height: 100 }" class="text-center thumb__upload"></div>
                </div>#}

                <div class="upload__element" style="float: left; position: relative;">

                    <img ng-src="{{  path_img_event_original }}[[ main_path ]][[ main_image ]]" height="100">

                </div>


                <div class="upload__element" ng-repeat="item in post.images_baraholka" style="float: left; position: relative;">
                    <label class="glyphicon glyphicon-pencil edit__album" edit-pain="info" style="position: absolute; top: 0px;">
                        <input type="checkbox" class="hidden">
                        <div class="edit__album__menu">
                            <ul class="margin-top_20">
                                <li ng-click="removeImageBaraholka(item.id)">Удалить</li>

                            </ul>
                        </div>
                    </label>

                    <img src="/home/baraholka/thums/1439033701_b97fb3e16828c456c54a48fab223cd5f.jpg" height="100">

                </div>



            </div>


            <input type="file" nv-file-select="" uploader="uploader" id="uploadImg"  class="hidden" ng-disabled="uploader.isUploading" />

            <div rg-range-picker="myDatetimeRange" collapse="collapseDirective" labels="myDatetimeLabels"></div>
            <div class="row">
                <div class="col-sm-12">
                    <textarea id="ui-tinymce-0" class="tiny" ui-tinymce="tinymceOptions" ng-model="tinymceModel"></textarea>
                </div>
            </div>


            <div class="button_message early-message text-center text-white pointer" ng-click="saveEditEvent()">
                <div class="fs_0-9" ng-class="{'loader':loader}">Сохранить</div>
            </div>

        </div>

        <div class="col-sm-2 margin-top_20 text-right padding-left_0 padding-right_0">
            <span class="text-blue pointer left" ng-if="remove.remove_post == false" ng-click="remove.remove_post = true">Удалить событие ?</span>

            <div ng-if="remove.remove_post == true" class="left padding-left_0">
                Удалить ?
                <span class="text-blue pointer" ng-click="deleteEvent(id_edit)">Да</span> |
                <span ng-click="remove.remove_post = false" class="text-blue pointer">Нет</span>
            </div>

        </div>

    </div>


