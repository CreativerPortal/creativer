    <div class="row slid">

        <div class="col-sm-10 padding-left_0">


            <table class="baraholka__table margin-top_25 padding-left_0">
                <tr ng-repeat="(key, post) in posts">
                    <td class="shops__table__left">
                        <div class="col-sm-2 padding-left_0">
                            <img ng-if="post.img" ng-src="{{ path_img_shop }}/[[ post.path ]][[ post.img ]]" />
                            <img ng-if="!post.img" ng-src="{{ path_img_shop }}/[[ post.images_baraholka[0].path ]][[ post.images_baraholka[0].name ]]" />
                        </div>
                    </td>
                    <td class="shops__table__right" ng-init="post.remove_post = false">
                        <div class="col-sm-10 text-left">
                            <p href="#/viewtopic/[[ post.id ]]" class="text-gray fs_1-2 lobster">[[ post.name ]]</p>
                            <p class="text-gray">[[ post.description ]]</p>
                        </div>
                        <span ng-if="post.remove_post == false" class="glyphicon glyphicon-remove close_image_shop ng-isolate-scope" ng-click="post.remove_post = true"></span>
                        <div ng-if="post.remove_post == true" class="col-sm-6 text-right remove_shop_yes_no">
                            Удалить ?
                            <span class="text-blue pointer" ng-click="removeShop(post.id,key)">Да</span> |
                            <span ng-click="post.remove_post = false" class="text-blue pointer">Нет</span>
                        </div>
                    </td>
                </tr>
            </table>

            <div ng-if="search && !posts.length && (searchInCategory || searchInBaraholka)" class="lobster text-center text-gray fs_3-2">Ничего не найдено</div>


        </div>

        <div class="col-sm-2">
            {% if is_granted('ROLE_USER') %}
                <a href="#/create_shop" class="col-sm-5 advert_button margin-top_20">Добавить магазин</a>
            {% endif %}


            <div class="row">
                <div class="margin-top_80">
                    <img class="margin-top_20" src="/var/www/creativer/web/banner/reclama.png" alt="реклама" />
                    <img class="margin-top_20" src="/var/www/creativer/web/banner/reclama.png" alt="реклама" />
                    <img class="margin-top_20" src="/var/www/creativer/web/banner/reclama.png" alt="реклама" />
                </div>

            </div>

        </div>



    </div>
