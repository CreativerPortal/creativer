    <link rel="stylesheet" href="/css/pages/events.css">

    <div class="row slid">

        <div class="row margin-top_15">
            <div class="col-sm-2 padding-left_0"><h3 class="lobster margin-left_0">События</h3></div>

            <div class="col-sm-2 padding-left_0 margin-top_10">
                <span>Регион</span>
                <label class="open text-blue cities__select pointer" for="all_cities"><span>[[ city.name || 'Беларусь' ]]</span></label>
                <input type="checkbox" class="cities-checkbox" id="all_cities">
                <div class="cities__menu__main">
                    <div class="cities__background-top"></div>
                    <div class="cities__background-body">
                        <ul class="text-white cities__menu fs_1-1 padding-left_0 text-center">
                            <li ng-repeat="c in city">
                                <label>[[ c.name ]]
                                    <input type="radio" class="city-radio" name="city" ng-value="[[ c ]]" ng-model="$root.city" ng-click="uncheck($root.city.id)" />
                                </label>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-sm-2 slid__search padding-left_0 margin-top_15">
                <input placeholder="Поиск в событиях" ng-model="searchEventText" ng-keyup="$event.keyCode == 13 && searchEvent()">
                <button class="slid__slider-button" ng-click="searchEvents()"></button>
            </div>
            {% if is_granted('ROLE_USER') %}
                <a href="#/create_event" class="col-sm-2 col-sm-offset-1 event_buttom margin-top_10">Создать событие</a>
            {% endif %}
        </div>

        <div class="horizontal_line_dashed"></div>

        <div class="row slid__list margin-top_10">
            <div class="col-sm-2 padding-left_0">

                <div ng-repeat="children in section">
                    <div class="padding-left_0 text-gray"><h3 class="lobster margin-left_0">[[ children.name ]]</h3></div>
                    <div ng-repeat="child in children.children"><a href="#/event/[[ child.id ]]">[[ child.name ]]</a></div>
                </div>


            </div>
            <div class="col-sm-10">

                <div class="banner-horizontal margin-top_20 text-center"><img src="/var/www/creativer/web/banner/banner_event.png" /></div>

                <div ng-repeat="event in events">
                    <div class="padding-left_0 text-gray"><h3 class="lobster margin-left_0">[[ event.name ]]</h3></div>
                    <div class="horizontal_line_dashed"></div>
                    <div class="row margin-top_10">
                        <div class="col-sm-12">
                            <div class="col-sm-3" ng-repeat="e in event.events">
                                <div class="row">
                                    <a href="#/event/[[ e.id ]]" class="overflow-hidden container_image_product block">
                                        <img class="main_small_img_event" ng-src="{{  path_img_event_original }}[[ e.path ]][[ e.img ]]" />
                                    </a>
                                    <a href="#/event/[[ e.id ]]" class="slid__card__name_user text-left">[[ e.name ]]</a><br>
                                    <span class="text-gray fs_0-9" ng-if="e.start_date != e.end_date">[[ e.start_date | date: "dd.MM.yyyy" ]] - [[ e.end_date | date: "dd.MM.yyyy" ]]</span>
                                    <span class="text-gray fs_0-9" ng-if="e.start_date == e.end_date">[[ e.start_date | date: "dd.MM.yyyy" ]]</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="banner-horizontal margin-top_40 text-center"><img src="/var/www/creativer/web/banner/banner_list.png" /></div>
            </div>
        </div>

    </div>


