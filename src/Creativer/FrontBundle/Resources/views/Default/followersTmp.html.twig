 <div class="row slid  padding-right_0" ng-show="user">

        <div class="row">
            <div class="col-sm-5 padding-left_0">
                <div class="col-sm-9 padding-left_0" >
                    <h3 class="lobster name__user"><a href="/#!/[[ user.id ]]">[[ user.username ]] [[ user.lastname ]]</a></h3>
                </div>
                <div ng-if="user.connection_status != '{{ date_online }}' && user.id != $root.id_user" class="col-sm-3 padding-left_0 padding-right_5 connection_status line-height_1 margin-top_25 text-right">
                    [[ user.connection_status | date: "dd MMM HH:mm" ]]
                </div>
                <div ng-if="user.connection_status == '{{ date_online }}' && user.id != $root.id_user" class="col-sm-3 padding-left_0 padding-right_5 connection_status line-height_1 margin-top_25 text-right">
                    Online
                </div>
            </div>
            <h4 class="col-sm-6 lobster text-gray margin-top_30 margin-left_15">В избранных у</h4>
        </div>

     <div class="col-sm-5 user padding-left_0">
         {{ render(controller('CreativerFrontBundle:Default:userInfoTmp', {'id': id})) }}
     </div>

        <div class="col-sm-7 album" ng-init="res = user.albums[id].images.length/3">

            <div class="padding-bottom_30">
                <a ng-click="removeUser(favorit.id)" href="/#!/[[ favorit.id ]]" class="col-sm-3 text-center margin-top_20 block favorit__card pointer" ng-repeat="favorit in user.favorits_with_me">
                    <div class="user__avatar-favorit" ng-class="{'user__avatar-favorit-online':favorit.connection_status == '{{ date_online }}'}" style="background-color: [[ favorit.color ]];">
                        <img ng-src="[[ favorit.avatar ]]">
                    </div>
                    <div class="text-center fs_0-9 lobster">[[ favorit.username ]]</div>
                    <div class="text-center fs_0-9 lobster">[[ favorit.lastname ]]</div>
                </a>
            </div>
        </div>

 </div>
