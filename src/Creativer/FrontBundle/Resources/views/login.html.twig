{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

<form class="col-sm-3 col-sm-offset-5 form-auth" action="{{ path('security_check') }}" method="post">
    <input class="form-auth__input fiveMinuts left margin-left_10" type="password" id="password" name="password" placeholder="Шифр"/>
    <input class="form-auth__input fiveMinuts left margin-left_15" type="text" id="username" name="username" value="{{ last_username }}" placeholder="Имя"/>
    <button type="submit" name="login" class="form-auth__buttom margin-left_5"></button>
</form>